<div class="posts-sell-contents">
  <header class="posts-sell-header">
    <h1><%= link_to "𝐓𝐫𝐚𝐝𝐞 𝐍𝐨𝐭𝐞",root_path, class: "second-logo" %></h1>
  </header>

  <div class="posts-sell-main">
    <h2 class="posts-sell-title">トレードの詳細を入力</h2>
    <%= form_with model: @post, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="img-upload">
      <div class="weight-bold-text">
        投稿画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <%= f.file_field :image, id:"post-image" %>
      </div>
    </div>
    <div class="new-posts">
      <div class="posts-explain">
        <div class="weight-bold-text">
          トレードの説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :description, class:"posts-text", id:"post-info", placeholder:"トレードの説明（必須 1,000文字まで）エントリー理由など  例,三角持ち合いを下に抜けていたのでリターンを見てショートでエントリーしました。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>

    <div class="sell-btn-contents">
      <%= f.submit "投稿" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>

  <footer class="posts-sell-footer">
    <h1><%= link_to "𝐓𝐫𝐚𝐝𝐞 𝐍𝐨𝐭𝐞",root_path,class: "second-fotter-logo" %></h1>
  </footer>
</div>